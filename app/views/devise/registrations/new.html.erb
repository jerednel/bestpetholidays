<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <div id="login-overlay" class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
              <h4 class="modal-title" id="myModalLabel">Register With Best Pet Holidays</h4>
          </div>
          <div class="modal-body">

              <div class="row">
                  <div class="col-xs-6">
                      <div class="well">
                         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                          <!--<form id="loginForm" method="POST" action="/login/" novalidate="novalidate">-->
                              <div class="form-group">

                                  
                                  <%= f.label :email, "Email", class: 'control-label' %>
                                  <%= f.email_field :email, autofocus: true, placeholder: 'example@gmail.com', class: 'form-control' %>
                                  
                                  <span class="help-block"></span>
                              </div>
                                                            <div class="form-group">
                                  <%= f.label :password, "Password", class: 'control-label' %>
                                  <% if @validatable %>
                                  <em>(<%= @minimum_password_length %> chars minimum)</em>
                                  <% end %><br />
                                  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                                  <span class="help-block"></span>
                              </div>
                              <div class="form-group">
                                  <%= f.label :password_confirmation, "Confirm Password", class: 'control-label' %>
                                  <br />
                                  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
                                  <span class="help-block"></span>
                              </div>
                              <div class="form-group">

                                  <% if resource_name.to_s == 'user' %>
                                  <%= f.label :display_name, "Display Name", class: 'control-label' %>
                                  <%= f.text_field :display_name, autofocus: true, placeholder: 'Jane Doe', class: 'form-control' %>
                                  <% elsif resource_name.to_s =='sitter' %>

                                  <%= f.label :display_name, "Business Name", class: 'control-label' %>
                                  <%= f.text_field :display_name, autofocus: true, placeholder: 'Kensington Dog Sitters', class: 'form-control' %>
                                  <% end %>
                                  
                                  <span class="help-block"></span>
                              </div>
                              <% if resource_name.to_s == 'sitter' %>
                              <div class="form-group">
                                <%= f.label :website, "Business Website", class: 'control-label' %>
                                <%= f.text_field :website, autofocus: true, placeholder: 'http://www.mywebsite.com', class: 'form-control' %>
                                <span class="help-block"></span>
                              </div>
                              <% end %>

                              <div class="form-group">

                                  
                                  <%= f.label :address_line_1, "Address Line 1", class: 'control-label' %>
                                  <%= f.text_field :address_line_1, autofocus: true, placeholder: '123 Nowhere St.', class: 'form-control' %>
                                  
                                  <span class="help-block"></span>
                                </div>
                                  <div class="form-group">

                                  
                                  <%= f.label :address_line_2, "Address Line 2", class: 'control-label' %>
                                  <%= f.text_field :address_line_2, autofocus: true, placeholder: 'No 23', class: 'form-control' %>
                                  
                                  <span class="help-block"></span>
                                </div>
                              <div class="form-group">

                                  
                                  <%= f.label :post_code, "Post Code", class: 'control-label' %>
                                  <%= f.text_field :post_code, autofocus: true, placeholder: 'W4 1XY', class: 'form-control' %>
                                  
                                  <span class="help-block"></span>
                              </div>
                              <div id="loginErrorMsg" class="alert alert-error hide">Wrong username or password</div>
                              <div class="form-group">
                                  <!--<label>-->
                                     
                                      <!--<input type="checkbox" name="remember" id="remember"> Remember login-->
                                  <!--</label>-->
                          
                              </div>
                              <%= f.submit "Register", class: 'btn btn-success btn-block' %>
                           
                            
                          <!--</form>-->
                          <% end %>
                      </div>
                  </div>
                  <div class="col-xs-6">
                      <p class="lead">Register now for <span class="text-success">FREE</span></p>
                      <% if resource_name.to_s == 'sitter' %>
<p>Congratulations!  You're one step away from getting great online placement for your business as well as scheduling and marketing tools for your pet sitting.</p>
<% end %>

                      <ul class="list-unstyled" style="line-height: 2">
                          <% if resource_name.to_s == 'sitter' %>
                          <li><span class="fa fa-check text-success"></span> Listing in our directory</li>
                          <li><span class="fa fa-check text-success"></span> Link back to your site</li>
                          <li><span class="fa fa-check text-success"></span> Job tracking calendar</li>
                          <li><span class="fa fa-check text-success"></span> Create and manage pet profiles</li>
                          <li><span class="fa fa-check text-success"></span> Accept new reservations online</li>
                          <li><span class="fa fa-check text-success"></span> Marketing tools</li>

                          <% elsif resource_name.to_s == 'user' %>
                            <li><span class="fa fa-check text-success"></span> Access to the best pet sitters</li>
                            <li><span class="fa fa-check text-success"></span> Easy reservation tracking system</li>
                            <li><span class="fa fa-check text-success"></span> Browse sitters by distance</li>
                            <li><span class="fa fa-check text-success"></span> Easily keep track of your favorites</li>
                            <% end %>
                      </ul>
<p>You will need to confirm your email account before your account becomes active.  You should receive an email within a half hour to confirm.</p>


                  </div>
              </div>
          </div>
      </div>
      <%= render "devise/shared/links" %>

  </div>

