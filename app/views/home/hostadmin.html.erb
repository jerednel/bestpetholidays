            <p><%= link_to "Add Pet Profile", new_pet_path %> - <%= link_to "Add Reservation", new_reservation_path %> - <%= link_to 'Edit My Profile', edit_sitter_registration_path, :class => 'footer-menu-divider' %> -  <%= link_to 'View Profile', sitter_path(current_sitter.to_param) %></p>
