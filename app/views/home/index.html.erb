<a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Best Pet Holidays</h1>
                        <h3>The UK's number 1 source for non-kennel pet boarding</h3>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li>
                                <%= link_to "Find Pet Sitter", '#services', :class => 'btn btn-default btn-lg', :id=>'find-sitter'  %>

                            </li>
                            <li><%= link_to "Offer Pet Sitting", new_sitter_registration_path, :class => 'btn btn-default btn-lg'  %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->

    <!-- Page Content -->

	<a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-sm-6" id="searchbox">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Find a Pet Sitter</h2>
                    <p class="lead">When you're going on holiday, it's good to know your pet isn't stuck in a kennel, but can enjoy the same relaxation that you are!</p>
                    <%= form_tag locations_path, :method => :get do %>
                      <p>
                        <%= text_field_tag :search, params[:search] %>
                        <%= submit_tag "Search Near", :name => nil %>
                    <% end %>

                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                	<%= image_tag('ipad.png', :class => 'img-responsive') %>

                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->



	<a  name="contact"></a>
    <div class="banner">

        <div class="container">

            <div class="row">
                <div class="col-lg-6">
                    <h2>Connect With Best Pet Holidays:</h2>
                </div>
                <div class="col-lg-6">
                    <ul class="list-inline banner-social-buttons">
                        <li>
                            <a href="https://twitter.com/bestpetholidays" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
                        </li>
                        <li>
                            <a href="http://www.facebook.com/bestpetholidays" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Facebook</span></a>
                        </li>
                        <li>
                            <a href="#" class="btn btn-default btn-lg"><i class="fa fa-linkedin fa-fw"></i> <span class="network-name">Linkedin</span></a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.banner -->
